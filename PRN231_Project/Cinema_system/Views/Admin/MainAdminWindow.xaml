<Window x:Class="Cinema_system.Views.Admin.MainAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local ="clr-namespace:Cinema_system.Views.Admin"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="#f2f5f9"
        Title="MainAdminWindow" Height="820" Width="1440"
        FontFamily="arial"
        Name="mainadminwindow"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Panel.ZIndex="999">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="800" />
        </Grid.RowDefinitions>

        <!--#FF383737-->
        <StackPanel   Background="#132644"
              Grid.Row="0">
            <StackPanel Orientation="Horizontal"
                VerticalAlignment="Top"
                HorizontalAlignment="Right">

                <Label ToolBar.OverflowMode="AsNeeded"
               Height="20"
               BorderThickness="0"
               Foreground="Black"
               BorderBrush="Transparent"
               MouseLeftButtonUp="Label_MouseLeftButtonUp_1">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Setter Property="Background"
                            Value="Transparent" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                 Value="True">
                                    <Setter Property="Background"
                                    Value="Gray" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                    <materialDesign:PackIcon Kind="WindowMinimize"
                                     Height="15"
                                     Width="20"
                                     Foreground="White" />
                </Label>

                <Label ToolBar.OverflowMode="AsNeeded"
               Height="20"
               Foreground="Black"
               BorderBrush="Transparent"
               materialDesign:ButtonAssist.CornerRadius="0,10,0,0"
               MouseLeftButtonUp="Label_MouseLeftButtonUp">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Setter Property="Background"
                            Value="Transparent" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                 Value="True">
                                    <Setter Property="Background"
                                    Value="Red" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                    <materialDesign:PackIcon Kind="WindowClose"
                                     Padding="0"
                                     Foreground="White"
                                     Width="20"
                                     Height="15"
                                     Margin="0,-3,0,0" />
                </Label>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1">

            <!--Frame-->
            <Frame x:Name="MainFrame"
           Height="720"
           Width="1440"
           NavigationUIVisibility="Hidden"
           Panel.ZIndex="0"
           Margin="0,80,0,0">

                <!--<i:Interaction.Triggers>
                    <i:EventTrigger EventName="Loaded">
                        <i:InvokeCommandAction Command="{Binding LoadQLPPageCM}"
                                       CommandParameter="{Binding ElementName=MainFrame}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>-->
            </Frame>
            <Grid Grid.RowSpan="2"
          Background="Gray"
          Opacity="0.3"
          Visibility="Collapsed"
          x:Name="shadow"
          MouseDown="MainFrame_MouseDown" />
            <!--thanh cong cu-->
            <materialDesign:ColorZone Mode="Inverted"
                              Padding="16"
                              Height="80"
                              Background="#132644"
                              materialDesign:ShadowAssist.ShadowDepth="Depth3"
                              MouseLeftButtonDown="mainadminwindow_MouseLeftButtonDown" />
            <DockPanel>
                <StackPanel Orientation="Horizontal"
                    Margin="-260,0,0,0">
                    <StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <!--<Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=SlideButton}"

                                                         Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>
                                </DataTrigger>
                            </Style.Triggers>-->
                        </Style>
                    </StackPanel.Style>

                    <StackPanel.RenderTransform>
                        <TranslateTransform />
                    </StackPanel.RenderTransform>

                    <Grid Background="#132644"
                        Width="285"
                        Margin="-25,0,0,0">
                        <StackPanel>
                            <StackPanel.Resources>
                                <Style TargetType="Button"
                               BasedOn="{StaticResource MaterialDesignFlatAccentBgButton}">
                                    <Style.Setters>
                                        <Setter Property="Foreground"
                                        Value="White" />
                                    </Style.Setters>
                                </Style>
                                <Style TargetType="materialDesign:PackIcon">
                                    <Style.Setters>
                                        <Setter Property="Foreground"
                                        Value="White" />
                                    </Style.Setters>
                                </Style>
                            </StackPanel.Resources>
                            <Grid Height="80">
                                <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal"
                                    Height="60">
                                    <!--<Image Source="/Resources/Icon/iconApp.ico"
                                   Width="60"
                                   Margin="10,-5,5,0" />-->
                                    <TextBlock TextWrapping="Wrap"
                                       materialDesign:TextBlockAssist.AutoToolTip="True"
                                       VerticalAlignment="Bottom"
                                       TextAlignment="Center"
                                       Text="Squadin Cinema"
                                       FontFamily="Helvetica"
                                       FontWeight="Bold"
                                       Foreground="#e3e9fa"
                                       FontSize="20"
                                       Width="100"/>
                                </StackPanel>
                            </Grid>

                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="MovieEdit"
                                                 Height="30"
                                                 Width="30"
                                                 Margin="10,0,0,0"
                                                 VerticalAlignment="Center" />
                                <Button Margin="0,0,0,5"
                                Content="Quản lý phim"
                                Height="50"
                                FontSize="25"
                                HorizontalContentAlignment="Left"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Width="240"
                                Command="{Binding LoadQLPPageCM}"
                                CommandParameter="{Binding ElementName=MainFrame}" />
                            </StackPanel>

                            <StackPanel  Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Filmstrip"
                                                 Height="30"
                                                 Width="30"
                                                 Margin="10,0,0,0"
                                                 VerticalAlignment="Center" />
                                <Button Content="Quản lý suất chiếu"
                                Height="50"
                                FontSize="25"
                                Width="240"
                                HorizontalContentAlignment="Left"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding LoadSuatChieuPageCM}"
                                CommandParameter="{Binding ElementName=MainFrame}" />

                            </StackPanel>


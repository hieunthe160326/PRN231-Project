                                    CornerRadius="100"
                                    Width="30"
                                    Height="30"
                                    Visibility="{Binding ErrorCount,Converter={StaticResource CountConverter}}"
                                    Margin="-20,-8,0,0">
                                        <TextBlock Text="{Binding ErrorCount}"
                                           FontSize="20"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Foreground="White" />
                                    </Border>
                                </Grid>

                            </StackPanel>-->
                        </StackPanel>
                    </Grid>
                    <Grid Margin="40,0,0,0">
                        <ToggleButton x:Name="SlideButton"
                              Style="{DynamicResource MaterialDesignHamburgerToggleButton}"
                              Checked="SlideButton_Checked"
                              Unchecked="SlideButton_Unchecked"
                              VerticalAlignment="Top"
                              Margin="0,20,0,0"
                              Foreground="White"
                              Loaded="SlideButton_Loaded" />
                        <!--<Border Background="Red"
                        CornerRadius="100"
                        Width="30"
                        x:Name="topnotifi"
                        Height="30"
                        Margin="18,10,-11,760"
                        Visibility="{Binding ErrorCount,Converter={StaticResource CountConverter}}">
                            <TextBlock Text="{Binding ErrorCount}"
                               FontSize="20"
                               x:Name="count"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Foreground="White" />
                        </Border>-->
                    </Grid>
                    <TextBlock VerticalAlignment="Top"
                       FontSize="30"
                       Margin="15,20,0,0"
                       Text="{Binding SelectedFuncName}"
                       Foreground="White">
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0">
                    <materialDesign:PackIcon Kind="AccountCircle"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Right"
                                     Height="50"
                                     Width="50"
                                     Foreground="White" />
                    <Label x:Name="CurrentUserName"
                   Content=""
                   VerticalAlignment="Center"
                   FontSize="25"
                   Foreground="White" />
                    <materialDesign:PopupBox DockPanel.Dock="Right"
                                     Foreground="White"
                                     PlacementMode="BottomAndAlignRightEdges">
                        <StackPanel Orientation="Vertical">
                            <Button Content="Đổi vai trò"
                            Command="{Binding ChangeRoleCM}"
                            CommandParameter="{Binding ElementName=mainadminwindow}"/>
                            <Button Content="Đăng xuất"
                            Command="{Binding SignoutCM}"
                            CommandParameter="{Binding ElementName=mainadminwindow}" />
                        </StackPanel>
                    </materialDesign:PopupBox>
                </StackPanel>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
